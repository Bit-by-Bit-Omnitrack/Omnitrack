@model IEnumerable<UserRoles.Models.Tasks>


@{
    ViewData["Title"] = "Users";
}
<!-- Small boxes (Stat box) -->
<a asp-action="Create" class="btn btn-block btn-primary">  <i class="fa fa-plus"></i> Add new Task</a>

<a asp-controller="Tasks" asp-action="MyTasks" class="btn btn-block btn-secondary mt-2">
    <i class="fa fa-tasks"></i> View My Tasks
</a>


<div class="row">
    <div class="col-lg-3 col-6">
        <h2> Tasks</h2>
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h2>task name </h2>
                assigned to <br />
                created by<br />
                details  <br />
                due date<br />
            </div>

            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <h2> In Progress</h2>
        <div class="small-box bg-success">
            <div class="inner">


                <h2>task name </h2>
                assigned to <br />
                created by<br />
                details  <br />
                due date<br />
            </div>

            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <h2> Complete</h2>
        <div class="small-box bg-warning">
            <div class="inner">



                <h2>task name </h2>
                assigned to <br />
                created by<br />
                details  <br />
                due date<br />
            </div>

            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <h2> Blockers</h2>
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">



                <h2>task name </h2>
                assigned to <br />
                created by<br />
                details  <br />
                due date<br />
            </div>

            <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>
<!-- /.row -->
<!-- Main row -->