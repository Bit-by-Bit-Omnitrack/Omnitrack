@{
    ViewData["Title"] = "System Admin Dashboard";
}

<div class="content-header">
    <div class="container-fluid">
        <h1 class="m-0 text-dark">Welcome, System Administrator</h1>
        <p class="lead">This is your system control panel. View activity, manage users, and check system status.</p>
    </div>
</div>

<!-- Quick Statistics Section -->
<div class="container mb-4">
    <div class="row text-center">
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h4>Approved Users</h4>
                    <h2>@ViewBag.ApprovedUsers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h4>Pending Users</h4>
                    <h2>@ViewBag.PendingUsers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h4>Rejected Users</h4>
                    <h2>@ViewBag.RejectedUsers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h4>Total Tickets</h4>
                    <h2>@ViewBag.TotalTickets</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Action Buttons -->
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <a asp-controller="User1" asp-action="Authenticate" class="btn btn-primary btn-block">
                Authenticate Users
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="User1" asp-action="Index" class="btn btn-success btn-block">
                View Authenticated Users
            </a>
        </div>
        <div class="col-md-4">
            <a asp-controller="User1" asp-action="RejectedUsers" class="btn btn-danger btn-block">
                View Rejected Users
            </a>
        </div>
    </div>
</div>
