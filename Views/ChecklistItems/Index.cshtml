@model IEnumerable<UserRoles.Models.ChecklistItem>
<h2>Checklist Items</h2>
<a asp-action="Create">Create New</a>
<table class="table">
    <thead><tr><th>Description</th><th>Completed</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Description</td>
                <td>@item.IsCompleted</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ItemID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ItemID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
