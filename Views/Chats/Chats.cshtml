@model ChatsModel
@{
    ViewData["Title"] = "Chats";
}

<h2>Chats</h2>

<form method="post" asp-page-handler="Create" class="mb-3">
    <div class="row">
        <div class="col-md-2">
            <input asp-for="NewChat.TicketId" class="form-control" placeholder="Ticket ID" required />
        </div>
        <div class="col-md-3">
            <input asp-for="NewChat.Sender" class="form-control" placeholder="Sender Name" required />
        </div>
        <div class="col-md-5">
            <input asp-for="NewChat.Message" class="form-control" placeholder="Message" required />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success w-100">Send</button>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Ticket</th>
            <th>Sender</th>
            <th>Message</th>
            <th>Sent At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chat in Model.Chats)
        {
            <tr>
                <td>@chat.TicketId</td>
                <td>@chat.Sender</td>
                <td>@chat.Message</td>
                <td>@chat.SentAt.ToLocalTime()</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@chat.Id">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

