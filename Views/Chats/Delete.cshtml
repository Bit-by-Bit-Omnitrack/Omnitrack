@model UserRoles.Models.Chats

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Delete Message</h1>

<h5 class="text-danger">Are you sure you want to delete this chat message?</h5>

<div class="mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            Chat Details
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Ticket ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TicketId)</dd>

                <dt class="col-sm-3">Sender</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Sender)</dd>

                <dt class="col-sm-3">Message</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Message)</dd>

                <dt class="col-sm-3">Sent At</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SentAt)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary ml-2">Cancel</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}