@model UserRoles.Models.Tasks

@{
    ViewData["Title"] = "Create Task";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary text-uppercase fw-bold">
        <i class="fas fa-plus-circle me-2"></i>Create New Task
    </h2>

    <div class="row">
        <div class="col-md-6 col-lg-5">
            <form asp-action="Create" class="shadow-sm p-4 bg-white rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Task Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter task title" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AssignedToUserId" class="form-label fw-semibold">Assign To</label>
                    <select asp-for="AssignedToUserId" class="form-select" asp-items="ViewBag.Users">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="AssignedToUserId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Details" class="form-label fw-semibold">Details</label>
                    <textarea asp-for="Details" class="form-control" rows="4" placeholder="Add task description..."></textarea>
                    <span asp-validation-for="Details" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DueDate" class="form-label fw-semibold">Due Date</label>
                    <input asp-for="DueDate" class="form-control" type="date" />
                    <span asp-validation-for="DueDate" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check-circle me-1"></i>Create Task
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Font Awesome (for icons) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}