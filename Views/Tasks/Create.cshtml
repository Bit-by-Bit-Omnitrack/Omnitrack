@model UserRoles.Models.Tasks

@{
    ViewData["Title"] = "Create Task";
}

<h2>Create Task</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="TicketId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Details"></label>
        <textarea asp-for="Details" class="form-control"></textarea>
        <span asp-validation-for="Details" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserId">Assign To</label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId">
            <option value="">-- Select User --</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Tickets1" asp-action="Details" asp-route-id="@Model.TicketId" class="btn btn-secondary">Cancel</a>
</form>
