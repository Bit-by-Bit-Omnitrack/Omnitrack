@using UserRoles.ViewModels
@model List<TaskReportViewModel>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Project</th>
            <th>Total Tasks</th>
            <th>Completed</th>
            <th>Open Tickets</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.ProjectName</td>
                <td>@report.TotalTasks</td>
                <td>@report.CompletedTasks</td>
                <td>@report.OpenTickets</td>
                <td>@report.Status</td>
            </tr>
        }
    </tbody>
</table>