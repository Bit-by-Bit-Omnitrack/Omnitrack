@model UserRoles.Models.Tasks

@{
    ViewData["Title"] = "Delete Task";
}

<div class="container py-4">
    <h2 class="text-danger text-uppercase fw-bold mb-3">
        <i class="fas fa-trash-alt me-2"></i>Delete Task
    </h2>

    <h5 class="mb-4">Are you sure you want to delete the following task?</h5>

    <div class="card border-danger shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Task Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 text-muted">Assigned To</dt>
                <dd class="col-sm-9">@Model.AssignedToUser?.FullName </dd>

                <dt class="col-sm-3 text-muted">Created By</dt>
                <dd class="col-sm-9">@Model.CreatedByUser?.UserName </dd>

                <dt class="col-sm-3 text-muted">Details</dt>
                <dd class="col-sm-9">@Model.Details</dd>

                <dt class="col-sm-3 text-muted">Due Date</dt>
                <dd class="col-sm-9">@Model.DueDate.ToString("dd MMM yyyy") </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt me-1"></i>Confirm Delete
            </button>
        </div>
    </form>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
