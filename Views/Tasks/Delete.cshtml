@model UserRoles.Models.Tasks

@{
    ViewData["Title"] = "Delete Task";
}

<h2>Delete Task</h2>

<h4>Are you sure you want to delete this task?</h4>
<div>
    <strong>Name:</strong> @Model.Name <br />
    <strong>Status:</strong> @Model.Status <br />
    <strong>Due Date:</strong> @Model.DueDate.ToShortDateString()
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-controller="Tickets1" asp-action="Details" asp-route-id="@Model.TicketId" class="btn btn-secondary">Cancel</a>
</form>
