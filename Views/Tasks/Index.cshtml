@model IEnumerable<UserRoles.Models.Tasks>

@{
    ViewData["Title"] = "Index";
}

<h1>Tasks List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Task</a>
</p>

<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                @* Adjust column sizes as needed for responsiveness *@
                <div class="card h-100 shadow-sm">
                    @* h-100 makes cards equal height, shadow-sm adds a subtle shadow *@
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">@Html.DisplayFor(modelItem => item.Name)</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Assigned To: @Html.DisplayFor(modelItem => item.AssignedToUser.FullName)</h6>
                        <p class="card-text flex-grow-1">
                            @* flex-grow-1 makes details take up available space *@
                            <strong>Details:</strong> @Html.DisplayFor(modelItem => item.Details)
                        </p>
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item">
                                <strong>Created By:</strong>
                                @if (item.CreatedByUser != null)
                                {
                                    @Html.DisplayFor(modelItem => item.CreatedByUser.UserName)

                                }
                                else
                                {
                                    <span>N/A</span>

                                }
                            </li>
                            <li class="list-group-item"><strong>Due Date:</strong> @Html.DisplayFor(modelItem => item.DueDate)</li>
                        </ul>
                        <div class="mt-auto d-flex justify-content-around">
                            @* mt-auto pushes buttons to the bottom, justify-content-around spaces them out *@
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>

                            <a asp-controller="Tickets" asp-action="Index" asp-route-filterTaskId="@item.Id" class="btn btn-secondary btn-sm">View Tickets</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>