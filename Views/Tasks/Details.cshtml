@model UserRoles.Models.Tasks

@{
    ViewData["Title"] = "Task Details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-uppercase fw-bold text-primary">Task Details</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">
                    <i class="fas fa-tasks me-1 text-primary"></i> Task Name
                </dt>
                <dd class="col-sm-9">
                    <span class="fw-semibold">@Model.Name</span>
                </dd>

                <dt class="col-sm-3 text-muted">
                    <i class="fas fa-project-diagram me-1 text-primary"></i> Project
                </dt>
                <dd class="col-sm-9">
                    @Model.Project?.ProjectName
                </dd>

                <dt class="col-sm-3 text-muted">
                    <i class="fas fa-user-tag me-1 text-primary"></i> Assigned To
                </dt>
                <dd class="col-sm-9">
                    @Model.AssignedToUser?.FullName
                </dd>

                <dt class="col-sm-3 text-muted">
                    <i class="fas fa-user-edit me-1 text-primary"></i> Created By
                </dt>
                <dd class="col-sm-9">
                    @Model.CreatedByUser?.UserName
                </dd>

                <dt class="col-sm-3 text-muted">
                    <i class="fas fa-align-left me-1 text-primary"></i> Details
                </dt>
                <dd class="col-sm-9">
                    @Model.Details
                </dd>

                <dt class="col-sm-3 text-muted">
                    <i class="fas fa-calendar-alt me-1 text-primary"></i> Due Date
                </dt>
                <dd class="col-sm-9">
                    @Model.DueDate.ToString("dddd, dd MMMM yyyy")
                </dd>
            </dl>
        </div>
    </div>
</div>

<!-- Font Awesome Link (if not already included) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
