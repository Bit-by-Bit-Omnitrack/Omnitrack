<h3>Tasks</h3>

<a class="btn btn-primary mb-3" 
   asp-controller="Tasks" 
   asp-action="Create" 
   asp-route-ticketId="@Model.Id">
    + Add Task
</a>

@if (Model.Tasks != null && Model.Tasks.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Details</th>
                <th>Status</th>
                <th>Due Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Name</td>
                <td>@task.Details</td>
                <td>
                    @if (task.Status == "Complete")
                    {
                        <span class="badge bg-success">Complete</span>
                    }
                    else if (task.Status == "InProgress")
                    {
                        <span class="badge bg-warning text-dark">In Progress</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Pending</span>
                    }
                </td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>
                    <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No tasks found for this ticket.</p>
}
