
@model IEnumerable<UserRoles.ViewModels.UserWithRolesViewModel>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Omnitrack Users List</h3>
    </div>
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Status</th>
                    <th>Roles</th>
                    <th>Edit</th>
                    <th>View</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.User.Email</td>
                        <td>@item.User.UserName</td>
                        <td>@(item.User.IsActive ? "Active" : "Inactive")</td>
                        <td>
                            @foreach (var role in item.Roles)
                            {
                                <span class="badge badge-info">@role</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.User.Id" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.User.Id" class="btn btn-warning">View</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.User.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
