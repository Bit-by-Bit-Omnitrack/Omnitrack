@model IEnumerable<UserRoles.Models.Users>

@{
    ViewData["Title"] = "Rejected Users";
}

<h2>Rejected Users</h2>

@if (!Model.Any())
{
    <p class="text-muted">There are no rejected users at this time.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Rejection Reason</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>
                        @if (!string.IsNullOrEmpty(user.RejectionReason))
                        {
                            @user.RejectionReason
                        }
                        else
                        {
                            <span class="text-muted">No reason provided</span>
                        }
                    </td>
                    <td>
                        <!-- Point to AccountController.ApproveUser -->
                        <form asp-action="ApproveUser" asp-controller="Account" method="post">
                            <!--  Use correct parameter name "userId" -->
                            <input type="hidden" name="userId" value="@user.Id" />
                            <!--  Pass source so controller knows it came from Rejected -->
                            <input type="hidden" name="source" value="Rejected" />

                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
