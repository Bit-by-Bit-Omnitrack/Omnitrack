@model UserRoles.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<div class="container py-4">
    <h2 class="text-danger fw-bold mb-3">
        <i class="fas fa-trash-alt me-2"></i>Delete Project
    </h2>

    <h5 class="mb-4">Are you sure you want to delete this project?</h5>

    <div class="card border-danger shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Project Name</dt>
                <dd class="col-sm-9">@Model.ProjectName</dd>

                <dt class="col-sm-3 text-muted">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 text-muted">Start Date</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("dd MMM yyyy") </dd>

                <dt class="col-sm-3 text-muted">End Date</dt>
                <dd class="col-sm-9">@Model.EndDate?.ToString("dd MMM yyyy") </dd>

                <dt class="col-sm-3 text-muted">Active</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjectId" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt me-1"></i>Confirm Delete
            </button>
        </div>
    </form>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
