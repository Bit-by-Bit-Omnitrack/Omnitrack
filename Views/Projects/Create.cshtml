@model UserRoles.Models.Project

@{
    ViewData["Title"] = "Create Project";
}

<div class="container py-4">
    <h2 class="text-primary fw-bold mb-4">
        <i class="fas fa-folder-plus me-2"></i>Create New Project
    </h2>

    <div class="row">
        <div class="col-md-6 col-lg-5">
            <form asp-action="Create" class="shadow-sm p-4 bg-white rounded border">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="ProjectName" class="form-label fw-semibold"></label>
                    <input asp-for="ProjectName" class="form-control" placeholder="Enter project name" />
                    <span asp-validation-for="ProjectName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your project"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label fw-semibold"></label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EndDate" class="form-label fw-semibold"></label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger small"></span>
                </div>

                <div class="form-check mb-4">
                    <input asp-for="IsActive" class="form-check-input" id="IsActive" />
                    <label asp-for="IsActive" class="form-check-label fw-semibold"></label>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-1"></i>Create Project
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
