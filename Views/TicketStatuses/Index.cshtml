@model IEnumerable<UserRoles.Models.TicketStatus>
<h2>Ticket Statuses</h2>
<a asp-action="Create">Create New</a>
<table class="table">
    <thead><tr><th>Status Name</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StatusName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StatusID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.StatusID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>