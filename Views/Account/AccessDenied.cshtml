@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5 text-center">
    <div class="card shadow p-4 border-danger">
        <div class="card-body">
            <h1 class="text-danger display-5 mb-3">
                <i class="fas fa-exclamation-triangle"></i> Access Denied
            </h1>
            <p class="lead">You do not have permission to view this page or perform this action.</p>
            <hr />
            <p class="text-muted">If you believe this is an error, please contact your administrator.</p>
            <a href="javascript:history.back()" class="btn btn-secondary mt-3">Go Back</a>
            <a asp-controller="Home" asp-action="Welcome" class="btn btn-primary mt-3 ms-2">Return to Home</a>
        </div>
    </div>
</div>
