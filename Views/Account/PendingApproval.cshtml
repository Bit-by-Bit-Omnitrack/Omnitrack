@{
    ViewData["Title"] = "Pending Approval";
    Layout = "~/Views/Shared/_AccountLayout.cshtml"; // Use minimal layout without sidebar for unapproved users

}
@section bodyClass {
    <text>pending-approval-bg</text>
}



<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-body text-center">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <h2 class="text-warning mb-4">Account Pending Approval</h2>
            @{
                var name = ViewData["UserName"]?.ToString();
                var formattedName = System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(name?.ToLower() ?? "User");
            }
            <p class="lead">Thank you for registering with <strong>OmniTrack</strong>, <strong>@formattedName</strong>.</p>

            <p>Your account has been created but is currently awaiting admin approval.</p>
            <p>You will receive an email once your account is activated.</p>

            <a class="btn btn-primary mt-3" href="@Url.Action("Login", "Account")">Back to Login</a>
        </div>
    </div>
</div>
