@{
    ViewData["Title"] = "Pending Approval";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-body text-center">
            <h2 class="text-warning mb-4">Account Pending Approval</h2>
            <p class="lead">Thank you for registering with <strong>OmniTrack</strong>.</p>
            <p>Your account has been created but is currently awaiting admin approval.</p>
            <p>You will receive an email once your account is activated.</p>

            <a class="btn btn-primary mt-3" href="@Url.Action("Login", "Account")">Back to Login</a>
        </div>
    </div>
</div>
