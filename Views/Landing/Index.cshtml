@{
    ViewData["Title"] = "Landing Page";
}

<div class="container mt-5">

    <!-- Welcome message -->
    <h2>Welcome, @ViewBag.UserName!</h2>
    <p class="text-muted">Today is @ViewBag.Today</p>

    <!-- Quick stats -->
    <div class="row mt-4 mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">My Tickets</h5>
                    <p class="card-text display-4">@ViewBag.TicketCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">My Tasks</h5>
                    <p class="card-text display-4">@ViewBag.TaskCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Quote of the Day</h5>
                    <p class="card-text">"@ViewBag.Quote"</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to action buttons -->
    <div class="text-center">
        <a class="btn btn-success btn-lg m-2" asp-controller="Tickets" asp-action="Create">Create New Ticket</a>
        <a class="btn btn-primary btn-lg m-2" asp-controller="Tickets" asp-action="MyTickets">View My Tickets</a>
        <a class="btn btn-secondary btn-lg m-2" asp-controller="Tasks" asp-action="MyTasks">View My Tasks</a>
    </div>

</div>
