@model UserRoles.Models.Ticket

@{
    ViewData["Title"] = "Create Ticket";
}

<div class="container py-4">
    <h2 class="text-primary text-uppercase fw-bold mb-4">
        <i class="fas fa-ticket-alt me-2"></i>Create New Ticket
    </h2>

    <div class="row">
        <div class="col-md-7 col-lg-6">
            <form asp-action="Create" class="shadow-sm p-4 bg-white rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter ticket title" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Add details..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AssignedToUserId" class="form-label fw-semibold">Assign To</label>
                    <select asp-for="AssignedToUserId" class="form-select" asp-items="ViewBag.Users">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="AssignedToUserId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TasksId" class="form-label fw-semibold">Related Task</label>
                    <select asp-for="TasksId" class="form-select" asp-items="ViewBag.Tasks">
                        <option value="">-- Select a Task --</option>
                    </select>
                    <span asp-validation-for="TasksId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PriorityId" class="form-label fw-semibold">Priority</label>
                    <select asp-for="PriorityId" class="form-select" asp-items="ViewBag.Priorities">
                        <option value="">-- Select Priority --</option>
                    </select>
                    <span asp-validation-for="PriorityId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DueDate" class="form-label fw-semibold">Due Date</label>
                    <input asp-for="DueDate" type="date" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-plus-circle me-1"></i>Create Ticket
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Font Awesome (if not already included) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}