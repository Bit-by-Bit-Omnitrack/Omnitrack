@model IEnumerable<UserRoles.Models.Users>

@{
    ViewData["Title"] = "Pending User Approvals";
}

<h2>Pending User Approvals</h2>

<!-- Show a message if no pending users -->
@if (!Model.Any(u => !u.IsActive))
{
    <p class="text-muted">There are no users awaiting approval.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Approve</th>
                <th>Reject</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Where(u => !u.IsActive))
            {
               
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>
                        <div class="d-flex gap-2">
                            <!-- Accept -->
                            <form asp-action="Approve" method="post">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-success btn-sm">
                                    Accept
                                </button>
                            </form>

                            <!-- View (goes to User/Details/id) -->
                            <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="btn btn-warning btn-sm">
                                View
                            </a>

                            <!-- Reject -->
                            <form asp-action="Reject" method="post">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    Reject
                                </button>
                            </form>
                        </div>
                    </td>
                    <td>
                        <form asp-action="Reject" method="post" style="display:inline-block; margin-left: 5px;">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fa fa-times"></i> Reject
                            </button>
                        </form>
                    </td>
                </tr>
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Message"]
                    </div>
                }
                @if (TempData["RejectMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["RejectMessage"]
                    </div>
                }
            }
        </tbody>
    </table>
}
