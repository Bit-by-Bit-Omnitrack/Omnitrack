@model IEnumerable<UserRoles.Models.Users>

@{
    ViewData["Title"] = "Pending User Approvals";
}

<h2>Pending User Approvals</h2>

@if (!Model.Any(u => !u.IsActive))
{
    <p class="text-muted">There are no users awaiting approval.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Where(u => !u.IsActive))
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-action="Approve" method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="fa fa-check"></i> Approve
                            </button>
                        </form>
                        <form asp-action="Reject" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fa fa-check"></i> Reject
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
