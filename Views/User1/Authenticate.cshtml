@model IEnumerable<UserRoles.Models.Users>

@{
    ViewData["Title"] = "Pending User Approvals";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}


<h2>Pending User Approvals</h2>

@if (!Model.Any(u => !u.IsActive))
{
    <p class="text-muted">There are no users awaiting approval.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>View</th>
                <th>Approve</th>
                <th>Reject</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Where(u => !u.IsActive))
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="User1" asp-action="Details" asp-route-id="@user.Id" class="btn btn-warning btn-sm">
                            View
                        </a>
                    </td>
                    <td>
                        <form asp-action="Approve" asp-controller="User1" method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="fa fa-check"></i> Approve
                            </button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="Reject" asp-controller="User1" method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                Reject
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
