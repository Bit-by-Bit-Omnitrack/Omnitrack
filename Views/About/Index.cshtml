@model UserRoles.Models.AboutViewModel
@{
    ViewData["Title"] = "About " + Model.AppName;

    // Map names to image files
    var memberImages = new Dictionary<string, string>
    {
        { "Tshenolo Millicent Mogane", Url.Content("~/Images/TshenoloMogane.jpg") },
        { "Azola Jokweni", Url.Content("~/Images/AzolaJokweni.jpg") },
        { "Esther Mkhabela", Url.Content("~/Images/EstherMkhabela.jpg") },
        { "Tlotlo Molefe", Url.Content("~/Images/TlotloMolefe.jpeg") }
    };
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><i class="fas fa-info-circle mr-2"></i>About @Model.AppName</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        <!-- Mission -->
        <div class="card card-primary shadow-sm">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-bullseye mr-2"></i>Mission</h3>
            </div>
            <div class="card-body">@Model.Mission</div>
        </div>

        <!-- Vision -->
        <div class="card card-success shadow-sm">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-eye mr-2"></i>Vision</h3>
            </div>
            <div class="card-body">@Model.Vision</div>
        </div>

        <!-- Team -->
        <div class="card card-dark shadow-sm mt-3">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-users mr-2"></i>The Team — @Model.TeamName</h3>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    @foreach (var member in Model.TeamMembers)
                    {
                        <div class="col-sm-6 col-md-3 mb-3">
                            <div class="card h-100 shadow-sm">
                                <img src="@memberImages[member]"
                                     alt="@member"
                                     class="card-img-top rounded-circle p-3"
                                     style="width:150px; height:150px; object-fit:cover; margin:auto;" />
                                <div class="card-body">
                                    <h6 class="card-title">@member</h6>
                                    <p class="card-text text-muted">@Model.TeamName</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="card-footer">
                <small class="text-muted"><strong>Version:</strong> @Model.Version</small>
            </div>
        </div>

    </div>
</section>
