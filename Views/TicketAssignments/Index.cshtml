@model IEnumerable<UserRoles.Models.TicketAssignment>
<h2>Ticket Assignments</h2>
<a asp-action="Create">Create New</a>
<table class="table">
    <thead>
        <tr><th>TicketID</th><th>UserID</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TicketID</td>
                <td>@item.UserID</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AssignmentID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.AssignmentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>